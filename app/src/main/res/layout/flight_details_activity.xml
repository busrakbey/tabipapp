<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainCoordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteCardColor"
    android:fitsSystemWindows="true">


    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="75dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@id/cordinatorBottom"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.appbar.AppBarLayout
                    android:id="@+id/appbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:gravity="center_horizontal"
                    app:elevation="0dp"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/vector_1"
                            android:layout_width="11dp"
                            android:layout_height="19dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="center"
                            android:layout_marginLeft="36dp"
                            android:background="@drawable/vector" />

                        <TextView
                            android:id="@+id/toolbar_logo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="35dp"
                            android:gravity="center"
                            android:padding="15dp"
                            android:text="Flight Details           "
                            android:textAppearance="@style/search_for_"
                            android:textColor="#000000"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:typeface="sans" />

                    </LinearLayout>
                </com.google.android.material.appbar.AppBarLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/video_call_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/ic_video_call" />

                    <Button
                        android:id="@+id/video_call_stop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/ic_video_call_stop" />

                    <Button
                        android:id="@+id/message"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/ic_message" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="7dp"
                    android:background="@drawable/shadow"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="40dp"
                            android:background="@color/whiteCardColor"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Name"
                                android:textAppearance="@style/search_for_"
                                android:textColor="#000000"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:typeface="sans" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginTop="10dp"
                                android:layout_weight="0.5"
                                android:orientation="horizontal">


                                <EditText
                                    android:id="@+id/yas"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/ic_rectangle2"
                                    android:drawableLeft="@drawable/profil"
                                    android:drawablePadding="5dp"
                                    android:paddingLeft="15dp"
                                    android:textColor="#000000"></EditText>

                                <EditText
                                    android:id="@+id/kilo"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/ic_rectangle2"
                                    android:paddingLeft="15dp"
                                    android:textColor="#000000"></EditText>

                                <EditText
                                    android:id="@+id/dogum_tarihi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="5dp"
                                    android:background="@drawable/ic_rectangle2"
                                    android:drawableLeft="@drawable/dogum_tarihi"
                                    android:drawablePadding="5dp"
                                    android:paddingLeft="15dp"
                                    android:textColor="#000000"></EditText>
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginTop="8dp"
                                android:layout_weight="0.5"
                                android:orientation="horizontal">


                                <EditText
                                    android:id="@+id/ucus_no"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/ic_rectangle2"
                                    android:drawableLeft="@drawable/edit"
                                    android:drawablePadding="5dp"
                                    android:paddingLeft="15dp"
                                    android:textColor="#000000"></EditText>

                                <EditText
                                    android:id="@+id/numara"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_weight="0.6"
                                    android:background="@drawable/ic_rectangle2"
                                    android:drawableLeft="@drawable/numara"
                                    android:drawablePadding="5dp"
                                    android:paddingLeft="15dp"
                                    android:textColor="#000000"></EditText>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="20dp">

                                <View
                                    android:id="@+id/line_2"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:background="@drawable/line2" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/ucus_bas"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="13:30\nPM"
                                    android:textAppearance="@style/search_for_"
                                    android:textColor="#000000"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:typeface="sans" />

                                <View
                                    android:id="@+id/ucak"
                                    android:layout_width="0dp"
                                    android:layout_height="61dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_gravity="center_horizontal|center_vertical"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="1.6"
                                    android:background="@drawable/ic_ucak" />

                                <TextView
                                    android:id="@+id/ucus_bit"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="16:15\nPM"
                                    android:textAppearance="@style/search_for_"
                                    android:textColor="#000000"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:typeface="sans" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/rothman_index_button"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.8"
                                    android:background="@drawable/ic_rothman_index"></Button>

                                <Button
                                    android:id="@+id/electro_button"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.8"
                                    android:background="@drawable/ic_elektro"></Button>

                                <Button
                                    android:id="@+id/blood_pressure_button"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.8"
                                    android:background="@drawable/ic_blood_pressure"></Button>
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/blood_glucose_button"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.8"
                                    android:background="@drawable/ic_blood_glucose"></Button>

                                <Button
                                    android:id="@+id/temperature_button"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.8"
                                    android:background="@drawable/ic_temperature"></Button>

                                <Button
                                    android:id="@+id/blood_oxygen_button"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.8"
                                    android:background="@drawable/ic_blood_oxygen"></Button>
                            </LinearLayout>


                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/not"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/ic_notee"
                        android:hint="NOTE"
                        android:paddingLeft="15dp"
                        app:layout_constraintStart_toStartOf="@id/linear2"></EditText>

                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
