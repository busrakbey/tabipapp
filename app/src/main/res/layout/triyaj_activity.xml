<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainCoordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteCardColor"
    android:focusableInTouchMode="true"
    android:fitsSystemWindows="true">


    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="75dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@id/cordinatorBottom"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.appbar.AppBarLayout
                    android:id="@+id/appbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:gravity="center_horizontal"
                    app:elevation="0dp"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/vector_1"
                            android:layout_width="11dp"
                            android:layout_height="19dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="center"
                            android:layout_marginLeft="25dp"
                            android:background="@drawable/vector" />

                        <TextView
                            android:id="@+id/toolbar_logo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="0dp"
                            android:gravity="center"
                            android:padding="15dp"
                            android:text="Triaj        "
                            android:textAppearance="@style/search_for_"
                            android:textColor="#000000"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:typeface="sans" />

                    </LinearLayout>
                </com.google.android.material.appbar.AppBarLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/video_call_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/ic_video_call" />

                    <Button
                        android:id="@+id/video_call_stop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/ic_video_call_stop" />

                    <Button
                        android:id="@+id/message"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/ic_message" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="7dp"
                    android:background="@drawable/shadow"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <Button
                            android:id="@+id/ucak3"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/ic_rectangle2"
                            android:text="Ölçüm Saati:17.10"
                            android:textAllCaps="false" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="40dp"
                            android:background="@color/whiteCardColor"
                            android:orientation="vertical" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:orientation="vertical">

                            <AutoCompleteTextView
                                android:id="@+id/ucus_numarasi"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="0.5"
                                android:background="@drawable/ic_rectangle2"
                                android:drawableLeft="@drawable/edit"
                                android:drawablePadding="10dp"
                                android:hint="Uçuş No"
                                android:paddingLeft="15dp"
                                android:textColor="#000000"
                                android:textStyle="bold"></AutoCompleteTextView>

                            <Button
                                android:id="@+id/ucak"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/ic_rectangle2"
                                android:drawableLeft="@drawable/plane"
                                android:gravity="center"
                                android:paddingLeft="5dp"
                                android:paddingTop="5dp"
                                android:textAllCaps="false"
                                android:textColor="#000000"
                                android:textSize="14sp" />

                            <LinearLayout
                                android:id="@+id/yolcu_bilgileri_linear"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="2.5"
                                android:background="@drawable/ic_rectangle2"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/ucak2"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_gravity="center_horizontal|center_vertical"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_weight="0.5"
                                    android:gravity="center"
                                    android:text="    Yolcu Bilgileri"
                                    android:textAllCaps="false"
                                    android:textColor="#FA000000"
                                    android:textSize="14sp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1.4"
                                    android:orientation="horizontal">

                                    <Button
                                        android:id="@+id/koluk_no_button"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_marginLeft="10dp"
                                        android:background="@drawable/koltuk_no_background"
                                        android:gravity="center"
                                        android:textColor="#000000"
                                        android:textSize="14sp"
                                        android:textStyle="bold"></Button>

                                    <TextView
                                        android:id="@+id/kisi_bilgisi_textview"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="5dp"
                                        android:layout_weight="1"
                                        android:gravity="left|center_vertical"
                                        android:paddingLeft="10dp"
                                        android:textColor="#000000"
                                        android:textSize="14sp" />
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginTop="2dp"
                                    android:layout_weight="1.4"
                                    android:orientation="horizontal">

                                    <Button
                                        android:id="@+id/hasta_durum_button"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_marginLeft="10dp"
                                        android:background="@drawable/koltuk_no_background"
                                        android:drawableLeft="@drawable/info"
                                        android:padding="12dp"></Button>

                                    <TextView
                                        android:id="@+id/hasta_durumu_textview"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="5dp"
                                        android:gravity="left|center_vertical"
                                        android:paddingLeft="10dp"
                                        android:textColor="#000000" />
                                </LinearLayout>


                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/olcum_bilgileri_linear"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="2.4"
                                android:background="@drawable/ic_rectangle2"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/olcum_saati"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentTop="true"
                                        android:layout_gravity="center_horizontal|center_vertical"
                                        android:layout_marginLeft="15dp"
                                        android:layout_marginRight="5dp"
                                        android:layout_weight="0.5"
                                        android:gravity="center_vertical"
                                        android:text="Ölçüm Saati:10:00"
                                        android:textAllCaps="false"
                                        android:textColor="#FA000000" />


                                    <Button
                                        android:id="@+id/yeni_olcum"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginRight="5dp"
                                        android:background="@drawable/add_button"></Button>

                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="6"
                                    android:orientation="horizontal">


                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.5"
                                        android:gravity="center">

                                        <Button
                                            android:id="@+id/nabiz"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_marginLeft="10dp"
                                            android:background="@drawable/koltuk_no_background"
                                            android:padding="5dp"></Button>
                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.5"
                                        android:gravity="center">

                                        <Button
                                            android:id="@+id/ekg"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_marginLeft="15dp"
                                            android:background="@drawable/koltuk_no_background"
                                            android:padding="5dp"></Button>
                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.5"
                                        android:gravity="center">

                                        <Button
                                            android:id="@+id/tansiyon"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_marginLeft="10dp"
                                            android:background="@drawable/koltuk_no_background"
                                            android:padding="5dp"></Button>
                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.5"
                                        android:gravity="center">

                                        <Button
                                            android:id="@+id/seker"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_marginLeft="10dp"
                                            android:background="@drawable/koltuk_no_background"
                                            android:padding="5dp"></Button>
                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.5"
                                        android:gravity="center">

                                        <Button
                                            android:id="@+id/saturasyon"
                                            android:layout_width="50dp"
                                            android:layout_height="50dp"
                                            android:layout_marginLeft="10dp"
                                            android:background="@drawable/koltuk_no_background"
                                            android:padding="5dp"></Button>
                                    </LinearLayout>

                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="2.4"
                                    android:gravity="top"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="10dp"
                                        android:layout_weight="0.5"
                                        android:gravity="center"
                                        android:padding="0dp"
                                        android:text="Nabız"
                                        android:textColor="#000520"
                                        android:textSize="12sp"></TextView>

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="10dp"
                                        android:layout_weight="0.5"
                                        android:gravity="center"
                                        android:text="EKG"
                                        android:textColor="#000520"
                                        android:textSize="12sp"></TextView>

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="10dp"
                                        android:layout_weight="0.5"
                                        android:gravity="center"
                                        android:text="Tansiyon"
                                        android:textColor="#000520"
                                        android:textSize="12sp"></TextView>

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="10dp"
                                        android:layout_weight="0.5"
                                        android:gravity="center"
                                        android:text="Şeker"
                                        android:textColor="#000520"
                                        android:textSize="12sp"></TextView>

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="10dp"
                                        android:layout_weight="0.5"
                                        android:gravity="center"
                                        android:text="Saturasyon"
                                        android:textColor="#000520"
                                        android:textSize="12sp"></TextView>

                                </LinearLayout>


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">


                                <Button
                                    android:id="@+id/durum_combobox"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="0.6"
                                    android:background="@drawable/ic_renk_gecisli_button"
                                    android:text="Durum"
                                    android:textAllCaps="false"
                                    android:textColor="#FFFFFF"
                                    android:textSize="14sp"></Button>


                                <Button
                                    android:id="@+id/cagri_baslat"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="0.5"
                                    android:background="@drawable/ic_cagri_baslat"
                                    android:drawableTop="@android:drawable/ic_menu_camera"
                                    android:text="Çağrı Başlat\n"
                                    android:textAllCaps="false"
                                    android:textColor="#FFFFFF"
                                    android:textSize="12sp"></Button>


                                <Button
                                    android:id="@+id/bilgiler_aktar"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="0.6"
                                    android:background="@drawable/ic_renk_gecisli_button"
                                    android:text="Bilgileri Aktar"
                                    android:textAllCaps="false"
                                    android:textColor="#FFFFFF"
                                    android:textSize="12sp"></Button>


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginLeft="25dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="35dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="1.2"
                                android:orientation="horizontal">


                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:gravity="center">

                                    <Button
                                        android:id="@+id/sesli_not_button"
                                        android:layout_width="55dp"
                                        android:layout_height="55dp"
                                        android:layout_marginLeft="10dp"
                                        android:background="@drawable/ic_mavi_yuvarlak"
                                        android:drawableTop="@android:drawable/ic_media_play"
                                        android:text="Sesli Not\n"
                                        android:textAllCaps="false"
                                        android:textColor="#FFFFFF"
                                        android:textSize="10sp"></Button>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:gravity="center">

                                    <Button
                                        android:id="@+id/gorsel_button"
                                        android:layout_width="55dp"
                                        android:layout_height="55dp"
                                        android:layout_marginLeft="10dp"
                                        android:background="@drawable/ic_mavi_yuvarlak"
                                        android:drawableTop="@android:drawable/ic_menu_gallery"
                                        android:text="Görsel\n"
                                        android:textAllCaps="false"
                                        android:textColor="#FFFFFF"
                                        android:textSize="10sp"></Button>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:gravity="center">

                                    <Button
                                        android:id="@+id/deger_button"
                                        android:layout_width="55dp"
                                        android:layout_height="55dp"
                                        android:layout_marginLeft="10dp"
                                        android:background="@drawable/ic_mavi_yuvarlak"
                                        android:drawableTop="@android:drawable/ic_menu_agenda"
                                        android:text="Değer\n"
                                        android:textAllCaps="false"
                                        android:textColor="#FFFFFF"
                                        android:textSize="10sp"></Button>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:gravity="center">

                                    <Button
                                        android:id="@+id/gecmis_button"
                                        android:layout_width="55dp"
                                        android:layout_height="55dp"
                                        android:layout_marginLeft="10dp"
                                        android:background="@drawable/ic_mavi_yuvarlak"
                                        android:drawableTop="@android:drawable/ic_menu_recent_history"
                                        android:text="Geçmiş\n"
                                        android:textAllCaps="false"
                                        android:textColor="#FFFFFF"
                                        android:textSize="10sp"></Button>
                                </LinearLayout>


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="0.9"
                                android:orientation="horizontal">


                                <Button
                                    android:id="@+id/mesaj_yaz_button"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="0.6"
                                    android:background="@drawable/ic_renk_gecisli_button"
                                    android:drawableLeft="@android:drawable/ic_menu_edit"
                                    android:paddingLeft="40dp"
                                    android:text="Mesaj Yaz               "
                                    android:textAllCaps="false"
                                    android:textColor="#FFFFFF"
                                    android:textSize="16sp"></Button>

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="0.9"
                                android:orientation="horizontal">


                                <Button
                                    android:id="@+id/divert_button"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="0.6"
                                    android:background="@drawable/ic_renk_gecisli_button"
                                    android:drawableLeft="@android:drawable/ic_dialog_map"
                                    android:paddingLeft="40dp"
                                    android:text="Divert                    "
                                    android:textAllCaps="false"
                                    android:textColor="#FFFFFF"
                                    android:textSize="16sp"></Button>


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="20dp">

                                <View
                                    android:id="@+id/line_2"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:background="@drawable/line2"
                                    android:visibility="gone" />

                            </LinearLayout>


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
